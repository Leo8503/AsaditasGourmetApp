<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="17dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="17dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/userProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Mi Perfil"
                android:textColor="@color/colorAccent"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/userProfileAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userProfileName"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/open_sans"
                android:textSize="14sp"
                android:textColor="@color/gray"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/bottomSheet"
            android:padding="10dp"
            android:background="@color/white">


            <ImageView
                android:id="@+id/favResImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_phone_iphone_24"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/deliveringAtText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Numero de Telefono"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delTelefono"
                android:layout_width="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage"
                android:layout_height="wrap_content"
                android:layout_below="@id/deliveringAtText"
                android:fontFamily="@font/open_sans_semibold"
                android:text="+57 3224477818"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userDeliveryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliveringAtText"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/changeAddressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans_bold"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomSheet2"
            android:padding="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/favResImage2"
                android:layout_width="30dp"
                android:layout_alignParentStart="true"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_person_24"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/deliveringAtText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage2"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Mi Nombre"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage2"
                android:layout_below="@id/deliveringAtText2"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Adrian Alberto Rodriguez"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userDeliveryAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliveringAtText2"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/gray"
                android:layout_marginTop="1dp"/>


            <ImageView
                android:id="@+id/changeAddressText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans_bold"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomSheet4"
            android:padding="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/favResImage4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_email_24" />

            <TextView
                android:id="@+id/deliveringAtText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage4"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Correo Electrónico:"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage4"
                android:layout_below="@id/deliveringAtText4"
                android:fontFamily="@font/open_sans_semibold"
                android:text="albertorodrizq@gmail.com"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/userDeliveryAddress4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliveringAtText4"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp"/>


            <ImageView
                android:id="@+id/changeAddressText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans_bold"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomSheet3"
            android:padding="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/favResImage3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_lock_24" />

            <TextView
                android:id="@+id/deliveringAtText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage3"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Contraseña"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage3"
                android:layout_below="@id/deliveringAtText3"
                android:fontFamily="@font/open_sans_semibold"
                android:text="***********"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userDeliveryAddress3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliveringAtText3"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/gray"
                android:layout_marginTop="1dp"/>


            <ImageView
                android:id="@+id/changeAddressText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans_bold"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomSheet5"
            android:padding="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/favResImage5"
                android:layout_width="30dp"
                android:layout_alignParentStart="true"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/deliveringAtText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage5"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Cerrar Sesion"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userDeliveryAddress5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliveringAtText5"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/gray"
                android:layout_marginTop="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomSheet6"
            android:padding="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/favResImage6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_folder_delete_24" />

            <TextView
                android:id="@+id/deliveringAtText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/favResImage6"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Eliminar Cuenta:"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userDeliveryAddress6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliveringAtText6"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/gray"
                android:layout_marginTop="1dp"/>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>