<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:numberpicker="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="17dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rowFG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/resImageContainer"
            android:layout_width="55dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/favResImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/favResName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/resImageContainer"
            android:fontFamily="@font/open_sans_semibold"
            android:text="adria"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/favResCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favResName"
            android:layout_marginStart="17dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/resImageContainer"
            android:fontFamily="@font/open_sans"
            android:text="Biryani, Mughlai, North Indian"
            android:textColor="@color/gray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favResCategories"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@id/resImageContainer"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/open_sans"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="12sp" />



        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/subtotal"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/resImageContainer"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/favoriteResPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/resImageContainer"
            android:fontFamily="@font/open_sans"
            android:text="adria"
            android:textColor="@color/colorAccent"
            android:textSize="13sp" />

    </RelativeLayout>

</RelativeLayout>